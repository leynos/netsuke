netsuke_version: "1.0.0"

# A minimal "Hello World" example demonstrating Netsuke basics.
# This manifest transforms input.txt to output.txt by converting to uppercase.

vars:
  greeting: "Hello from Netsuke"

targets:
  - name: output.txt
    command: "cat input.txt | tr 'a-z' 'A-Z' > output.txt"
    sources: input.txt

  # Note: Single quotes around the Jinja template work for simple strings but
  # will break if the variable contains a single quote character.
  - name: greeting.txt
    command: "echo '{{ greeting }}!' > greeting.txt"

defaults:
  - output.txt
  - greeting.txt
